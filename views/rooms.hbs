<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="/images/favicon.ico">  
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href = "/css/style.css">
    <title>AirB&B: Rooms</title>
  </head>
  <body class>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"><img class = "logo" src = "/images/logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/rooms" style = "font-size: 22px;">Rooms</a>
            </li>
            {{#if logged}}
            <li class="nav-item">
              <a class="nav-link" href="/register" style = "font-size: 22px;">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login" style = "font-size: 22px;">Login</a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/logout" style = "font-size: 22px;">Logout</a>
            </li>
            {{/if}}
          </ul>
        </div>
      </nav><br><br>

      <center>
      {{#unless logged}}
      <a style="margin-right: 50%; padding: 10px; font-weight: bold; background-color: salmon; cursor: pointer; color: inherit; border-style: solid;" href="/new_room">Add new room.</a>
      <br><br>
      {{else}}
      <a style="font-size: 22px;">To interact, or add new rooms you need to Login.</a><br><br>
      {{/unless}}
      <div class = "error_rooms">
        {{messages.error}}
      </div>
      <div style="font-size: 18px;">
        {{messages.no_found}}<br>       
        {{messages.currently}}
        {{messages.list_available}}
      </div><br>
      </center>
       <div class="container">
        <div class="row">
      {{#each list}}
          <div class="col-sm">
            <img class = "room-image" src = "/uploads/images/{{this.photo}}">
            <h4 class = "title">Room Title: {{this.title}}</h4>
            <p class = "price">Price: $ {{this.price}} CAD/night<br>Description: {{this.description}}<br><img src="/images/pin.png" style="width: 25px;">{{this.location}}</p>
            <a class = "edit" href="/edit/{{this._id}}">Edit</a>
            <form action="/delete/{{this._id}}?_method=DELETE" method="POST" style="display:inline">            
            <button class = "delete">Delete</button>
            </form>
            <br><br><br><br><br>
          </div>
      {{/each}}
        </div>
      </div>
      <div id="footer">
        <a href="/rooms" style = "font-size: 22px; color:white; text-decoration: none; margin-right: 3%;">Rooms</a>
        <a href="/register" style = "font-size: 22px; color:white; text-decoration: none; margin-right: 3%;">Sign Up</a>
        <a href="/login" style = "font-size: 22px; color:white; text-decoration: none; margin-right: 3%;">Login</a>
        <a href = "https://twitter.com/airbnb"><img class ="social" src = "/images/twitter.png"></a>
        <a href = "https://www.instagram.com/airbnb/"><img class = "social" src ="/images/insta.png"></a>
        <a href = "https://www.facebook.com/airbnbuk/"><img class = "social" src ="/images/face.png"></a>
      </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>